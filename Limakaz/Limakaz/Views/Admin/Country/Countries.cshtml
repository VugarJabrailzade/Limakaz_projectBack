@using Limakaz.Database.DomainModelsı
@model List<Country>
@{
    Layout = "_AdminLayout";
}

<div class="col-sm-12">
    <div class="page-title-box">
        <div class="float-end">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Metrica</a>
                </li><!--end nav-item-->
                <li class="breadcrumb-item">
                    <a href="#">Pages</a>
                </li><!--end nav-item-->
                <li class="breadcrumb-item active">Sifariş Ölkələri</li>
            </ol>
        </div>
        <h4 class="page-title">Sifariş Ölkələri</h4>
    </div><!--end page-title-box-->
</div><!--end col-->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <a asp-route="add-country" class="btn btn-success">Yeni ölkə əlavə et</a>
            </div><!--end card-header-->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Ölkə</th>
                                <th>Ölkənin prefixi</th>
                                <th>Aktiv statusu</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var country in Model)
                            {
                                <tr>
                                    <td>@country.Name</td>
                                    <td>@country.CountryPrefix</td>
                                    <td>@country.IsActive</td>
                                    <td class="text-end">
                                        <a asp-route="update-country" asp-route-id="@country.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                        <a asp-route="delete-country" asp-route-id="@country.Id"><i class="las la-trash-alt text-secondary font-16"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
