@using Limakaz.Database.DomainModels
@model List<Officies>
@{
    Layout = "_AdminLayout";
}

<div class="col-sm-12">
    <div class="page-title-box">
        <div class="float-end">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Metrica</a>
                </li><!--end nav-item-->
                <li class="breadcrumb-item">
                    <a href="#">Pages</a>
                </li><!--end nav-item-->
                <li class="breadcrumb-item active">Ofislər</li>
            </ol>
        </div>
        <h4 class="page-title">Ofislər</h4>
    </div><!--end page-title-box-->
</div><!--end col-->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <a asp-route="add-list" class="btn btn-success">Ofis əlavə et</a>
            </div><!--end card-header-->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Working Days</th>
                                <th>Opening Time</th>
                                <th>Closing Time</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var officies in Model)
                            {
                            <tr>
                                <td>@officies.Name</td>
                                <td>@officies.Location</td>
                                <td>@officies.WorkingDays</td>
                                <td>@officies.OpeningTime</td>
                                <td>@officies.ClosetingTime</td>
                                <td class="text-end">
                                        <a asp-route="update-office-list" asp-route-id="@officies.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                        <a asp-route="delete-office" asp-route-id="@officies.Id"><i class="las la-trash-alt text-secondary font-16"></i></a>
                                </td>
                            </tr>    
                            }
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!-- end col -->
