@using Limakaz.ViewModels.Officies
@model OfficiesResponseViewModel
@{
    Layout = "_AdminLayout";
}

<form method="post" class="row g-3">
    <a asp-route="add-office"></a>
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" type="text" class="form-control" id="Location">
        <span asp-validation-for="Location" class="text-danger"></span>

    </div>
    <div class="col-12">
        <label asp-for="WorkingDays" class="form-label">Working Days</label>
        <input asp-for="WorkingDays" type="text" class="form-control" id="inputAddress">
        <span asp-validation-for="WorkingDays" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="OpeningTime" class="form-label">Opening Time</label>
        <input asp-for="OpeningTime" type="text" class="form-control" id="inputAddress">
    </div>
    <div class="col-12">
        <label asp-for="ClosetingTime" class="form-label">Closing Time</label>
        <input asp-for="ClosetingTime" type="text" class="form-control" id="inputAddress2">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Yadda Saxla</button>
    </div>
</form>